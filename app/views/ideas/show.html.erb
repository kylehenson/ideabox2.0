<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<div class="container">
  <h2 class="center">A Box for Your Best Ideas</h2>
    <div id="search-box">
      <%= form_tag("/results", method: "get", remote: true, id: "search") do %>
        <div class="col s6">
          <%= label_tag(:idea, "eat peeps", class: 'idea-label' ) %>
          <%= text_field_tag(:idea, nil, class: "idea-input") %>
        </div>
        <div class="col s3">
          <%= submit_tag("Search", id: "search_button", class: "btn cyan") %>
        </div><br><br>
      <% end %>
    </div>
    <div class="row">
      <div class="col s5">
        <h3>Create an idea</h3>
        <div class="input-field">
          <input placeholder="Title" id="title" type="text" class="validate">
          <input placeholder="Body" id="body" type="text" class="validate">
          <%= submit_tag("Create Idea", id: "create_button", class: "btn cyan") %>
        </div>
      </div>
      <div class="col s4">
        <h3 class="center">Ideas List</h3>
        <div id="ideas"></div>
      </div>
    </div>
</div>
